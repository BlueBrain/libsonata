{
     "manifest": {
         "$OUTPUT_DIR": "."
     },
     "run": {
         "tstop": 1000,
         "dt": 0.025,
         "random_seed": 201506,
         "spike_location": "ais",
         "integration_method" : 2,
         "forward_skip": 500
    },
    "output": {
         "output_dir": "$OUTPUT_DIR/output",
         "spikes_file": "out.h5",
         "spikes_sort_order": "by_id"
    },
    "conditions": {
     "celsius": 35.0,
     "synapses_init_deleted": false
    },
    "inputs": {
        "ex_linear": {
            "input_type": "current_clamp",
            "module": "linear",
            "amp_start": 0.15,
            "delay": 0,
            "duration": 15,
            "node_set":"Column"
        },
        "ex_rel_linear": {
            "input_type": "current_clamp",
            "module": "relative_linear",
            "percent_start": 80,
            "percent_end": 20,
            "delay": 0,
            "duration": 1000,
            "node_set": "Column"
        },
        "ex_pulse": {
            "input_type": "current_clamp",
            "module": "pulse",
            "frequency": 80,
            "amp_start": 2,
            "width": 1,
            "delay": 10,
            "duration": 80,
            "node_set": "Mosaic"
        },
        "ex_noise_meanpercent": {
            "input_type": "current_clamp",
            "module": "noise",
            "mean_percent": 0.01,
            "variance": 0.001,
            "delay": 0.0,
            "duration": 5000.0,
            "node_set": "Rt_RC"
        },
        "ex_noise_mean": {
            "input_type": "current_clamp",
            "module": "noise",
            "mean": 0,
            "variance": 0.001,
            "delay": 0.0,
            "duration": 5000.0,
            "node_set": "Rt_RC"
        },
        "ex_rel_shotnoise": {
            "input_type": "current_clamp",
            "module": "relative_shot_noise",
            "delay": 0,
            "duration": 1000,
            "decay_time": 4,
            "rise_time": 0.4,
            "amp_cv": 0.63,
            "mean_percent": 70,
            "sd_percent": 40,
            "node_set": "L5E"
        },
        "ex_replay": {
            "input_type": "spikes",
            "module": "synapse_replay",
            "delay": 0.0,
            "duration": 40000.0,
            "spike_file": "replay.dat",
            "source": "ML_afferents",
            "node_set": "Column"
        }
    },
    "reports": {
         "soma": {
              "cells": "Mosaic",
              "sections": "soma",
              "type": "compartment",
              "variable_name": "v",
              "unit": "mV",
              "dt": 0.1,
              "start_time" : 0,
              "end_time" : 500,
              "file_name": "soma"
         },
         "compartment": {
              "cells": "Mosaic",
              "sections": "all",
              "type": "compartment",
              "variable_name": "v",
              "unit": "mV",
              "dt": 0.1,
              "start_time" : 0,
              "end_time" : 500,
              "file_name": "voltage",
              "enabled" : false
         },
         "axonal_comp_centers": {
              "cells": "Mosaic",
              "sections": "axon",
              "type": "compartment",
              "variable_name": "v",
              "unit": "mV",
              "compartments": "center",
              "scaling": "none",
              "dt": 0.1,
              "start_time" : 0,
              "end_time" : 500,
              "file_name": "axon_centers",
              "enabled" : true
         },
         "cell_imembrane": {
             "cells": "Column",
             "sections": "soma",
             "type": "summation",
             "variable_name": "i_membrane, IClamp",
             "unit": "nA",
             "dt": 0.05,
             "start_time": 0,
             "end_time": 500,
             "enabled": true
         }
    }
}
