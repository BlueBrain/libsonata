            "input_type": "spikes",
            "module": "synapse_replay",
            "delay": 0.0,
            "duration": 40000.0,
            "spike_file": "replay.h5",
            "node_set": "Column"
        },
        "ex_extracellular_stimulation": {
            "input_type": "extracellular_stimulation",
            "module": "synapse_replay",
            "delay": 0.0,
            "duration": 40000.0,
            "spike_file": "replay.h5",
            "node_set": "Column"
        },
        "ex_OU": {
            "input_type": "conductance",
            "module": "ornstein_uhlenbeck",
            "delay": 50,
            "duration": 200,
            "tau": 2.8,
            "reversal": 10,
            "mean": 50,
            "sigma": 5,
            "node_set": "Column"
        },
        "ex_rel_OU": {
            "input_type": "current_clamp",
