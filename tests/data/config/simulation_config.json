         "$ELECTRODES_DIR": "./electrodes/"
     },
     "target_simulator": "CORENEURON",
     "node_set" : "Column",
     "run": {
         "tstop": 1000,
         "dt": 0.025,
         "random_seed": 201506,
         "stimulus_seed": 111,
         "ionchannel_seed": 222,
         "minis_seed": 333,
