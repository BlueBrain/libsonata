    "conditions": {
      "celsius": 35.0,
      "spike_location": "AIS",
      "mechanisms": {
        "ProbAMPANMDA_EMS": {
          "property1": false,
          "property2": -1
        },
        "GluSynapse" : {
          "property3": 0.025,
          "property4": "test"
        }
      },
      "modifications": [
        {
            "node_set": "single",
            "type": "TTX",
            "name": "applyTTX"
        },
        {
            "node_set": "single",
            "type": "ConfigureAllSections",
            "section_configure": "%s.gSK_E2bar_SK_E2 = 0",
