            "percent_end": 20,
            "delay": 0,
            "duration": 1000,
            "node_set": "Column"
        },
        "ex_pulse": {
            "input_type": "current_clamp",
            "module": "pulse",
            "frequency": 80,
            "amp_start": 2,
            "width": 1,
            "delay": 10,
            "duration": 80,
            "node_set": "Mosaic"
        },
        "ex_sinusoidal": {
            "input_type": "current_clamp",
